// **************************************
#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#define num_elems 200
int array[200];
int max_value;

void *runner(void *param);
void *sorter(void *param);
void *searcher(void*pram);


int main() {
    time_t t;
    pthread_t tid, sort,search;
    pthread_attr_t attr;

    srand((unsigned) time(&t));
    pthread_attr_init(&attr);

    printf("Enter max value\n");
    scanf("%d", &max_value);

    pthread_create(&tid, &attr, runner, NULL);
    pthread_create(&sort,&attr,sorter,NULL);
    pthread_create(&search,&attr,searcher,NULL);

    pthread_join(sort,NULL);
    pthread_join(tid, NULL);
    pthread_join(search,NULL);
}

void *runner(void *param) {
	int c = 0, n=0;
    printf("Using runner thread\n");
	for (c = 0; c < num_elems; c++) {
		for(n=0; n<1000; n++); // To delay a bit 
		array[c] = rand() % max_value;
	}

	pthread_exit(0);
}
void *sorter(void *param){
    printf("using sorter thread\n");
    int c, d, swap;

    for (c = 0; c < num_elems; c++) {
        for (d = 0; d < num_elems - c - 1; d++) {
            if (array[d] > array[d + 1]) {
                swap = array[d];
                array[d] = array[d + 1];
                array[d + 1] = swap;
            }
        }
    }
    pthread_exit(0);
}
void *searcher(void *param){
    int search;
    printf("Enter value to find\n");
    scanf("%d", &search);
    printf("\nUsing searcher thread");

    int first = 0;
    int last = num_elems - 1;
    int middle = (first + last) / 2;
    int n;
   for(n=0; n<num_elems; n++){
        printf("\n %d", array[n]);
    }

    while (first <= last) {
        if (array[middle] < search)
            first = middle + 1;
        else if (array[middle] == search) {
            printf("\n %d found at location %d.\n", search, middle + 1);
            break;
        } else
            last = middle - 1;

        middle = (first + last) / 2;
    }
    if (first > last)
        printf("\n Not found! %d is not present in the list.\n", search);

    pthread_exit(0);
}


